<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ResetPassActivity">
    <ImageView
        android:id="@+id/imgResetPass"
        android:layout_width="212dp"
        android:layout_height="212dp"
        android:src="@drawable/forgot_password"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txtTitle2"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:gravity="center"
        android:textSize="36dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgResetPass"/>
    <EditText
        android:id="@+id/edtResetLogin"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:textColorHint="#2196F3"
        android:padding="10dp"
        android:drawablePadding="5dp"
        android:hint="example@email.com"
        android:background="@drawable/background_text"
        android:layout_marginTop="40dp"
        android:layout_width="343dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle2"/>
    <androidx.cardview.widget.CardView
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#235E8E"
        app:cardCornerRadius="13dp"
        android:id="@+id/cardviewSubmit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtResetLogin">
        <TextView
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txtConnectToSocial"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="60dp"
        android:text="Already have an account?"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txtLoginHere"
        app:layout_constraintTop_toBottomOf="@+id/cardviewSubmit" />
    <TextView
        android:id="@+id/txtLoginHere"
        android:layout_width="158dp"
        android:layout_height="19dp"
        android:layout_marginTop="170dp"
        android:text="Login here"
        android:textSize="16dp"
        android:textColor="#0829E3"
        android:clickable="true"
        app:layout_constraintLeft_toRightOf="@id/txtConnectToSocial"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardviewSubmit" />
</androidx.constraintlayout.widget.ConstraintLayout>